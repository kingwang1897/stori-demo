<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot http://sofastack.io/schema/sofaboot.xsd"
       default-autowire="byName">

    <!--    module-bill-->
    <sofa:reference interface="com.bill.facade.BillExternalFacade" id="billExternalFacade" jvm-first="false">
        <sofa:binding.bolt>
            <sofa:global-attrs timeout="15000"/>
        </sofa:binding.bolt>
    </sofa:reference>
    <sofa:reference interface="com.bill.facade.BillInternalFacade" id="billInternalFacade">
        <sofa:binding.jvm/>
    </sofa:reference>

    <!--    module-account-->
    <sofa:reference interface="com.account.facade.AccountInternalFacade" id="accountInternalFacade">
        <sofa:binding.jvm/>
    </sofa:reference>
</beans>